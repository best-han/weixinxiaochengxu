/* pages/mainPage/mainPage.wxss */
page{
  width: 100%;
  height: 100%;
 }
.container{
  margin-top:-85px;
  background-image:url("https://www.xsshome.cn/timg.jpg");
  background-repeat: no-repeat;
  background-size: auto;
  background-position:bottom;
  background-position-x: right;
  height: 100%;
}

.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
.up{
  color:rgb(255,255,255);
  font-size: 24px;
  font-family: 微软雅黑;
  width: 80px;
  height: 80px;
  vertical-align:middle;
  text-align:center;
  line-height:75px;
  border-radius:50%;
  background-color: rgb(26, 160, 225);
}
.user-motto{
  font-family: 微软雅黑;
}
.user-age{
  font-family: 微软雅黑;
}
.user-beauty{
  font-family: 微软雅黑;
}
.user-remark{
  font-family: 微软雅黑;
  margin-top: 65px;
}
.mainBtn{
  width: 90%;
  height: 110px;
  margin-top:3%;
  background-color: #F8F8F8;
  border: 1px solid #F46928;
  border-radius: 3px;
  text-align: center
}
.mainImg{
  width: 75px;
  height: 61px;
  margin-top: 4%
}
.mainText{
  font-family: 微软雅黑;
  margin: -1% 0 4% 0;
  color: #F46928
}
.bottomBox{
  width:90%;
}
.bottomBox text{
  font-size:12px;
  position:absolute;
  bottom:1.5%
}
.bottomBox .logo{
  width:90px;
  height:30px;
  position:absolute;
  bottom:2%;
  right:5%
}
.map{
  position:absolute;
  z-index:-1;
  width: 250%;
  height: 100%;
  margin-top: -6%;
}